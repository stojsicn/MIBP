doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm', crossorigin='anonymous')
    title #{prof.name}
  style.
    ul, .jumbotron, table{
    text-align: center;
    }
    a{
    color: white;
    }
    body{
    background: url("http://getwallpapers.com/wallpaper/full/e/7/5/608916.jpg");
    background-repeat: no-repeat;
    background-size: cover;
    }
  body
    .container
      .container-fluid
        .jumbotron
          h1.display-4 Prikaz profesora: #{prof.name} 
          hr.my-4
    .container
      .row
        .col-sm-6.md-6.lg-6
          ul.list-group
            li.list-group-item.active #{prof.name}
            li.list-group-item #{prof.school}
            li.list-group-item #{prof.grades}
            li.list-group-item #{prof.grade}
          form.form-inline(method="POST", action="/professor/#{prof.name}")
            .form-group
              label(for='Grade')
                input#Grade.form-control(type='text', placeholder="unesi ocenu od 1-5", name="grade")
            button.btn.btn-primary(type='submit') Dodaj ocenu
        .col-sm-6.md-6.lg-6
          table.table.table-hover
            thead
              tr
                th(scope='col') ID
                th(scope='col') Username
                th(scope='col') Likes
                th(scope='col') Dislikes
                th(scope='col') Comment
                th(scope="col") Like
                th(scope="col") Dislike
            tbody
              each comm, i in CommentList
                tr
                  th(scope='row') #{comm.id}
                  td #{comm.username}
                  td #{comm.likes}
                  td #{comm.dislikes}
                  td #{comm.comment}
                  td
                    a(href="/like/#{comm.id}")
                      button.btn.btn-success(type="button") Like
                  td
                    a(href="/dislike/#{comm.id}")
                      button.btn.btn-danger(type="button") Dislike
          .row
            .col-sm-4.md-4.lg-4
              button.btn.btn-primary(type='button')
                a(href='/#{prof.name}/addComment') Dodaj komentar
    script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js', integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js', integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q', crossorigin='anonymous')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js', integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl', crossorigin='anonymous')
